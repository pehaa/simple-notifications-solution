{
  "name": "simple-notifications-solution",
  "version": "1.1.1",
  "description": "A tiny vanilla JS library that provides a simple solution for notifications.",
  "main": "./dist/Notifications.js",
  "scripts": {
    "preprod": "rimraf dist",
    "predemo": "rimraf demo",
    "test": "karma start",
    "singletest": "karma start --single-run",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "dev": "npm run webpack-dev-server -- --env.mode development --hot",
    "prod": "npm run webpack -- --env.mode production",
    "demo": "npm run webpack -- --env.mode production --env.destination demo",
    "build": "npm run prod && npm run demo",
    "lint": "eslint tests/src src --fix",
    "validate": "npm-run-all lint singletest"
  },
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pehaa/simple-notifications-solution.git"
  },
  "keywords": [
    "vanilla",
    "js",
    "notifications"
  ],
  "author": "PeHaa Hetman <info@pehaa.com> (http://wptemplates.pehaa.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pehaa/simple-notifications-solution/issues"
  },
  "homepage": "https://github.com/pehaa/simple-notifications-solution#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-es2015": "^6.24.1",
    "bulma": "^0.7.1",
    "codecov": "^3.0.4",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "ghooks": "^2.0.4",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^3.0.0",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "unminified-webpack-plugin": "^2.0.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-karma-jasmine": "^2.0.4",
    "webpack-merge": "^4.1.4",
    "travis-deploy-once": "^5.0.3",
    "semantic-release": "^15.9.9"
  },
  "dependencies": {},
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
